{
  "id": "bc-template-nova",
  "description": "installs and configures the Openstack Nova component. It relies upon the network and glance barclamps for normal operation.",
  "attributes": {
    "nova": {
      "keystone_instance": "none",
      "service_user": "nova",
      "glance_instance": "none",
      "libvirt_type": "kvm",
      "use_novnc": true,
      "verbose": true,
      "user": "nova",
      "network": {
        "ha_enabled": true,
        "tenant_vlans": false,
        "dhcp_enabled": true,
        "allow_same_net_traffic": false,
        "num_networks": 1,
        "network_size": 256
      },
      "volume": {
        "volume_name": "nova-volumes",
        "volume_type": "raw",
        "nova_raw_method": "all",
        "nova_volume_disks": [],
        "local_file": "/var/lib/nova/volume.raw",
        "local_size": 2000,
        "eqlx": {
          "san_ip": "192.168.124.11",
          "san_login": "grpadmin",
          "san_password": "12345",
          "san_thin_provision": false,
          "eqlx_group_name": "group-0",
          "eqlx_use_chap": false,
          "eqlx_chap_login": "chapadmin",
          "eqlx_chap_password": "12345",
          "eqlx_ssh_keepalive_interval": 1200,
          "eqlx_cli_timeout": 30
        }
      },
      "rabbit": {
        "password": "secure_password",
        "user": "nova",
        "vhost": "/nova"
      },
      "db": {
        "mysql_instance": "none",
        "password": "",
        "user": "nova",
        "database": "nova"
      }
    }
  },
  "deployment": {
    "nova": {
      "crowbar-revision": 0,
      "element_states": {
        "nova-multi-volume": [ "readying", "ready", "applying" ],
        "nova-multi-controller": [ "readying", "ready", "applying" ],
        "nova-multi-compute": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [ "nova-multi-controller" ],
        [ "nova-multi-compute", "nova-multi-volume" ]
      ],
      "config": {
        "environment": "nova-config-base",
        "mode": "full",
        "transitions": false,
        "transition_list": []
      }
    }
  }
}

