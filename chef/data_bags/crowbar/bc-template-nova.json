{
  "id": "bc-template-nova",
  "description": "installs and configures the Openstack Nova component. It relies upon the network and glance barclamps for normal operation.",
  "attributes": {
    "nova": {
      "keystone_instance": "none",
      "glance_instance": "none",
      "libvirt_type": "kvm",
      "verbose": true,
      "user": "openstack-nova",
      "network": {
        "ha_enabled": true,
        "tenant_vlans": false,
        "dhcp_enabled": true,
        "allow_same_net_traffic": false,
        "num_networks": 1,
        "network_size": 256
      },
      "volume": {
        "nova_volume_disks": [],
        "volume_name": "nova-volumes",
        "type": "local",
        "local_file": "/var/lib/nova/volume.raw",
        "local_size": 2000000000
      },
      "rabbit": {
        "password": "secure_password",
        "user": "nova",
        "vhost": "/nova"
      },
      "db": {
        "sql_engine": "none",
        "sql_instance": "none",
        "password": "",
        "user": "nova",
        "database": "nova"
      }
    }
  },
  "deployment": {
    "nova": {
      "crowbar-revision": 0,
      "element_states": {
        "nova-multi-controller": [ "readying", "ready", "applying" ],
        "nova-multi-compute": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [ "nova-multi-controller" ],
        [ "nova-multi-compute" ]
      ],
      "config": {
        "environment": "nova-config-base",
        "mode": "full",
        "transitions": false,
        "transition_list": []
      }
    }
  }
}

